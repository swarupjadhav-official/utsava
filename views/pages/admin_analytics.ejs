<body>
  <%- include('../partials/navbar') %>

  <main class="admin-container">
    <h1>Platform Analytics</h1>
    <div class="stats-grid">
      <div class="stat-card">
        <h2>Total Users</h2>
        <p><%= totalUsers %></p>
      </div>
      <div class="stat-card">
        <h2>Organisers</h2>
        <p><%= organisers %></p>
      </div>
      <div class="stat-card">
        <h2>Admins</h2>
        <p><%= admins %></p>
      </div>
      <div class="stat-card">
        <h2>Total Events</h2>
        <p><%= totalEvents %></p>
      </div>
      <div class="stat-card">
        <h2>Approved Events</h2>
        <p><%= approvedEvents %></p>
      </div>
      <div class="stat-card">
        <h2>Registrations</h2>
        <p><%= registrations %></p>
      </div>
    </div>

    <div class="analytics-actions">
      <a href="/admin/dashboard" class="btn light">‚Üê Back</a>
